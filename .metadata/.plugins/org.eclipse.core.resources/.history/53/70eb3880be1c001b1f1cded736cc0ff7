package com.naver;

public class WhileEx {
	
	public void me1() {
		// 0부터 100까지를 출력할 수 있음
		int i = 0;
		while(i<101){
			System.out.println(i);
			i++;
		}
	}
	
	public void me11() {
		// 100부터 0까지를 출력할 수 있음
		int i = 100;
		while(i>=0) {
			System.out.println(i);
			i--;
		}
	}
	
	public void me2() {
		// 0 2 4.. 46까지 짝수만 출력하기
		int i = 0;
		while(i<47) {
			System.out.println(i);
			i = i+2;
		}
	}
	
	public void me22() {
		// 1 3 5 .. 45까지 홀수만 출력하기 
		int i = 1;
		while(i<47) {
			System.out.println(i);
			i +=2;
		}
		
	}
	
	public void me21() {
		// 99부터 21까지 홀수만 출력하기 
		int i = 99;
		while(i>=21) {
			System.out.println(i);
			i-=2;
		}
	}
	
	public void me211() {
		int i = 99;
		while(i>=21) {
			
			if(i%2==0) {
				continue;
			}
			
			System.out.println(i);
			i--;
		
		}
	}
	
	
	public void dan(int dan) {
		int i = 1;
		while(i<10) {
			StringBuffer sb = new StringBuffer(dan);
			sb.append(" x ");
			sb.append(i);
			sb.append(" = ");
			sb.append(dan*i);
			String m = sb.toString();
			System.out.println(m);
			
		}
	}
	
}
